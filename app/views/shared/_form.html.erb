<div class="form_section">
  <%= form_with form_hash do |f| %>
    <h1><%= sign_up ? '会員登録' : 'ログイン' %></h1>
    <% if sign_up %>
      <%= f.text_field :user_name, placeholder: 'ユーザー名' %>
    <% end %>
    <%= f.text_field :user_number, placeholder: '利用者番号' %>
    <%= f.password_field :password, placeholder: 'パスワード' %>
    <button class="btn"><%= sign_up ? '登録' : 'ログイン' %></button>
  <% end %>
  <footer>
    <% if sign_up %>
      <h5>既にアカウントをお持ちの方：
        <%= link_to 'ログイン', sign_in_path, class: 'sign_in_link' %>
      </h5>
    <% else %>
      <h5>アカウントをお持ちではない方：
        <%= link_to '会員登録', sign_up_path, class: 'sign_up_link' %>
      </h5>
    <% end %>
  </footer>
</div>

