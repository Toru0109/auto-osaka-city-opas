<div class="left-side-bar">
	<div class="brand-logo">
		<%= link_to automation_settings_path do %>
			<%= image_tag 'side_bar_logo.png', class: 'side-bar-logo' %>
			<span class="side-bar-logo-text">AutoOsaka<br>CityOpas</span>
		<% end %>
		<div class="close-sidebar" data-toggle="left-sidebar-close">
			<i class="ion-close-round"></i>
		</div>
	</div>
	<div class="menu-block customscroll">
		<div class="sidebar-menu">
			<ul id="accordion-menu">
				<li class="dropdown">
					<%= link_to 'javascript:;', class: "dropdown-toggle" do %>
						<span class="micon fa fa-gear"></span><span class="mtext">自動設定</span>
					<% end %>
					<ul class="submenu">
						<li><%= link_to '一覧', automation_settings_path, data: { turbolinks: false } %></li>
						<li><%= link_to '新規登録', new_automation_setting_path, data: { turbolinks: false } %></li>
					</ul>
				</li>
				<li class="dropdown">
					<%= link_to 'javascript:;', class: "dropdown-toggle" do %>
						<span class="micon dw dw-user1"></span><span class="mtext">ユーザー情報</span>
					<% end %>
					<ul class="submenu">
						<li><%= link_to '編集', edit_user_path, data: { turbolinks: false } %></li>
						<li><%= link_to 'パスワード変更', change_password_user_path, data: { turbolinks: false } %></li>
					</ul>
				</li>
				<li class="dropdown">
					<%= link_to manual_path, class: "dropdown-toggle manual_link", data: { turbolinks: false } do %>
						<span class="micon fa fa-file-text-o"></span><span class="mtext">操作マニュアル</span>
					<% end %>
				</li>
				<li>
					<div class="dropdown-divider"></div>
				</li>
				<li>
					<%= link_to 'アカウント削除', 'javascript:void(0);', class: 'sidebar-small-cap', onclick: 'confirmAccountDeletion();' %>
				</li>
			</ul>
		</div>
	</div>
</div>
