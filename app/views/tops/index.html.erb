<% content_for :css do %>
  <%= stylesheet_link_tag 'tops' %>
<% end %>

<section id="hero" style="height: 500px;">
  <div class="hero-container">
    <h1>大阪市スポーツ施設の空き状況を<br>より楽に確認！</h1>
    <h2>あなたに代わって自動で画面入力をします。</h2>
    <% unless logged_in? %>
      <%= link_to '使ってみる', 'javascript:(0);', class: 'btn-get-started', style: 'margin-bottom: 30px;', 'data-bs-toggle': 'modal', 'data-bs-target': "#sign-up-modal" %>
      <%= link_to 'ユーザーはこちら', 'javascript:void(0);', class: 'btn-get-started', 'data-bs-toggle': 'modal', 'data-bs-target': "#sign-in-modal" %>
    <% end %>
  </div>
</section>

<main id="main">
  <section id="about" class="about">
    <div class="container">
      <div class="section-title">
        <h2>登録方法と使い方</h2>
      </div>
      <div class="row">
        <div style="display: flex; justify-content: center;">
          <ul>
            <li class="usage-description">
              <i class="bi bi-check2-circle"></i>大阪市オーパスの利用者番号とパスワードを登録
            </li>
            <li class="usage-description">
              <i class="bi bi-check2-circle"></i>スポーツとよく利用する施設を登録
            </li>
            <li class="usage-description">
              <i class="bi bi-check2-circle"></i>処理開始をクリック
            </li>
            <li class="result-description">１週間分の施設の空き状況を自動で表示！</li>
          </ul>
        </div>
      </div>
    </div>
  </section>
</main>

<%= link_to '#', class: 'back-to-top d-flex align-items-center justify-content-center' do %>
  <i class="bi bi-arrow-up-short"></i>
<% end %>

<div class="modal fade" id="sign-up-modal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="sign-up-modal-title" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="sign-up-modal-title">会員登録</h5>
        <%= button_tag '', type: 'button', class: 'btn-close', 'data-bs-dismiss': 'modal', 'aria-label': 'Close' %>
      </div>
      <div class="modal-body">
        <div class="form_section">
          <%= render partial: "shared/sign_up_and_in_form",
            locals: {
              form_params: { model: User.new, url: user_path, html: { class: 'sign-up-form', onsubmit: "return checkSignUp();" } },
              sign_up: true,
              id: 'sign-up'
            }
          %>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="sign-in-modal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="sign-in-modal-title" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="sign-in-modal-title">ログイン</h5>
        <%= button_tag '', type: 'button', class: 'btn-close', 'data-bs-dismiss': 'modal', 'aria-label': 'Close' %>
      </div>
      <div class="modal-body">
        <div class="form_section">
          <%= render partial: "shared/sign_up_and_in_form",
            locals: {
              form_params: { scope: :session, url: session_path, html: { class: 'sign-in-form', onsubmit: "return checkSignIn();" } },
              sign_up: false,
              id: 'sign-in'
            }
          %>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Vendor JS Files -->
<%= javascript_include_tag 'vendor/bootstrap/js/bootstrap.bundle.min' %>
<%= javascript_include_tag 'vendor/glightbox/js/glightbox.min' %>
<%= javascript_include_tag 'vendor/isotope-layout/isotope.pkgd.min' %>
<%= javascript_include_tag 'vendor/swiper/swiper-bundle.min' %>
<%= javascript_include_tag 'vendor/php-email-form/validate' %>

<!-- Template Main JS File -->
<%= javascript_include_tag 'js/main' %>
